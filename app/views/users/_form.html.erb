<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :location %><br />
    <%= f.text_field :location %>
  </div>
  <div class="field">
    <%= f.label :profile_picture %><br />
    <%= f.file_field :profile_picture %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

  <% @user.proficiencies.each do |proficiency| %>
    <li> <%= proficiency.skill %> for <%= pluralize proficiency.years_of_experience, 'year' %> (<%= proficiencies.expertise_level %>)
    </li>
  <% end %>
<% end %>
