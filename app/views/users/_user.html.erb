<div class="user">
  <span class="profile_picture">
    <%= image_tag user.profile_picture %>
  </span>
  <div class="name">
    <%= user.name %>
  </div>
  <div class="location">
    <%= user.location %>
  </div>
  <div class="Skills">
   <p>Skills:</p>
   <%= user.skills.join(',') %>
  </div>
  <div class="styles">
   <p>Styles:</p>
   <%= user.styles.join(',') %>
  </div>
  <div class="contact">
    <%= image_tag 'contact.png' %>
  </div>
</div>
